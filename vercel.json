{
  "version": 2,
  "builds": [
    {
      "src": "serverless.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**",
          "direct-config.html",
          "xtream-config.html"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/serverless.js"
    }
  ]
}